<style>
    .mobile-nav {
        z-index: 1000;
    }
    
    .mobile-nav .nav-link {
        color: #6c757d;
        text-decoration: none;
        padding: 0.5rem 0.25rem;
        border-radius: 0.375rem;
        transition: all 0.3s ease;
    }
    
    .mobile-nav .nav-link:hover {
        color: #0d6efd;
        background-color: rgba(13, 110, 253, 0.1);
    }
    
    .mobile-nav .nav-link.active {
        color: #0d6efd;
        background-color: rgba(13, 110, 253, 0.1);
    }
    
    .mobile-nav .nav-link i {
        font-size: 1.25rem;
    }
    

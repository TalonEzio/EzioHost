@page "/faq"
@rendermode InteractiveServer

<PageTitle>FAQ - Câu hỏi thường gặp - EzioHost</PageTitle>

<!-- Hero Section -->
<section class="bg-gradient-to-br from-primary-600 via-primary-700 to-purple-800 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h1 class="text-4xl lg:text-5xl font-bold mb-4">❓ Câu hỏi thường gặp</h1>
            <p class="text-xl text-gray-200 max-w-3xl mx-auto">
                Tìm câu trả lời cho các câu hỏi phổ biến về EzioHost. Không tìm thấy câu trả lời? Hãy liên hệ với chúng tôi!
            </p>
        </div>
    </div>
</section>

<!-- FAQ Content -->
<section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Search Box -->
        <div class="mb-8">
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                    <i class="bi bi-search text-gray-400 text-xl"></i>
                </div>
                <input type="text"
                       id="faq-search"
                       class="block w-full pl-12 pr-4 py-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-lg"
                       placeholder="Tìm kiếm câu hỏi..."
                       @oninput="OnSearchChanged"/>
            </div>
        </div>

        <!-- Categories -->
        <div class="mb-8 flex flex-wrap gap-2 justify-center">
            <button class="px-4 py-2 rounded-lg font-medium transition-colors @(_selectedCategory == "" ? "bg-primary-600 text-white" : "bg-white text-gray-700 hover:bg-gray-100")"
                    @onclick="@(() => SelectCategory(""))">
                Tất cả
            </button>
            <button class="px-4 py-2 rounded-lg font-medium transition-colors @(_selectedCategory == "general" ? "bg-primary-600 text-white" : "bg-white text-gray-700 hover:bg-gray-100")"
                    @onclick="@(() => SelectCategory("general"))">
                Tổng quan
            </button>
            <button class="px-4 py-2 rounded-lg font-medium transition-colors @(_selectedCategory == "upload" ? "bg-primary-600 text-white" : "bg-white text-gray-700 hover:bg-gray-100")"
                    @onclick="@(() => SelectCategory("upload"))">
                Upload Video
            </button>
            <button class="px-4 py-2 rounded-lg font-medium transition-colors @(_selectedCategory == "ai" ? "bg-primary-600 text-white" : "bg-white text-gray-700 hover:bg-gray-100")"
                    @onclick="@(() => SelectCategory("ai"))">
                AI Upscale
            </button>
            <button class="px-4 py-2 rounded-lg font-medium transition-colors @(_selectedCategory == "account" ? "bg-primary-600 text-white" : "bg-white text-gray-700 hover:bg-gray-100")"
                    @onclick="@(() => SelectCategory("account"))">
                Tài khoản
            </button>
            <button class="px-4 py-2 rounded-lg font-medium transition-colors @(_selectedCategory == "technical" ? "bg-primary-600 text-white" : "bg-white text-gray-700 hover:bg-gray-100")"
                    @onclick="@(() => SelectCategory("technical"))">
                Kỹ thuật
            </button>
        </div>

        <!-- FAQ Items -->
        <div class="space-y-4">
            @foreach (var faq in FilteredFaqs)
            {
                <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden hover:shadow-md transition-shadow">
                    <button class="w-full px-6 py-4 text-left flex justify-between items-center focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-inset"
                            @onclick="() => ToggleFaq(faq.Id)">
                        <span class="font-semibold text-gray-900 text-lg pr-4">@faq.Question</span>
                        <i class="bi bi-chevron-down text-gray-500 text-xl transition-transform flex-shrink-0 @(faq.IsOpen ? "rotate-180" : "")"></i>
                    </button>
                    @if (faq.IsOpen)
                    {
                        <div class="px-6 pb-4 text-gray-700 leading-relaxed">
                            <div class="prose max-w-none">
                                @((MarkupString)faq.Answer)
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Empty State -->
        @if (!FilteredFaqs.Any())
        {
            <div class="text-center py-12">
                <i class="bi bi-search text-gray-400 text-6xl mb-4"></i>
                <h3 class="text-xl font-semibold text-gray-600 mb-2">Không tìm thấy câu hỏi</h3>
                <p class="text-gray-500">Thử tìm kiếm với từ khóa khác hoặc chọn danh mục khác</p>
            </div>
        }
    </div>
</section>


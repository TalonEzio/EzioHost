@using EzioHost.WebApp.Components.Shared
@inherits LayoutComponentBase

<div class="d-flex flex-column min-vh-100">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-play-circle-fill me-2"></i>
                EzioHost
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                            <i class="bi bi-house-door me-1"></i> Trang chủ
                        </NavLink>
                    </li>
                    <AuthorizeView>
                        <Authorized>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/video">
                                    <i class="bi bi-collection-play me-1"></i> Video
                                </NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/upload-video">
                                    <i class="bi bi-cloud-upload me-1"></i> Upload
                                </NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/onnx">
                                    <i class="bi bi-cpu me-1"></i> AI Models
                                </NavLink>
                            </li>
                        </Authorized>
                    </AuthorizeView>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="/faq">
                            <i class="bi bi-question-circle me-1"></i> FAQ
                        </NavLink>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <AuthorizeView>
                        <Authorized>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i> Tài khoản
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/profile"><i class="bi bi-person me-2"></i>Hồ sơ</a></li>
                                    <li><a class="dropdown-item" href="/settings"><i class="bi bi-gear me-2"></i>Cài đặt</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/logout"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</a></li>
                                </ul>
                            </li>
                        </Authorized>
                        <NotAuthorized>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập
                                </NavLink>
                            </li>
                        </NotAuthorized>
                    </AuthorizeView>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow-1">
        @Body
    </main>

    <!-- Mobile Navigation -->
    <MobileNavigation />

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-play-circle-fill me-2"></i>
                        EzioHost
                    </h5>
                    <p class="text-muted">Nền tảng video hosting cá nhân với AI upscale mạnh mẽ.</p>
                </div>
                <div class="col-md-3">
                    <h6 class="fw-bold mb-3">Liên kết</h6>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-muted text-decoration-none">Trang chủ</a></li>
                        <li><a href="/video" class="text-muted text-decoration-none">Video</a></li>
                        <li><a href="/faq" class="text-muted text-decoration-none">FAQ</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="fw-bold mb-3">Hỗ trợ</h6>
                    <ul class="list-unstyled">
                        <li><a href="/contact" class="text-muted text-decoration-none">Liên hệ</a></li>
                        <li><a href="/privacy" class="text-muted text-decoration-none">Bảo mật</a></li>
                        <li><a href="/terms" class="text-muted text-decoration-none">Điều khoản</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0 text-muted">&copy; 2024 EzioHost. Tất cả quyền được bảo lưu.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0 text-muted">Được phát triển với <i class="bi bi-heart-fill text-danger"></i> và .NET</p>
                </div>
            </div>
        </div>
    </footer>
</div>

<!-- Error UI -->
<div id="blazor-error-ui" class="alert alert-danger position-fixed top-0 start-50 translate-middle-x mt-3" data-nosnippet style="z-index: 9999;">
    <div class="d-flex align-items-center">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <span>Đã xảy ra lỗi không xử lý được.</span>
        <a href="." class="btn btn-outline-danger btn-sm ms-3">Tải lại</a>
        <button type="button" class="btn-close ms-2" onclick="this.parentElement.parentElement.style.display='none'"></button>
    </div>
</div>

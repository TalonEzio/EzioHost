@page "/settings/advanced"
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Cài đặt Nâng cao - EzioHost</PageTitle>

<div class="settings-container">
    <!-- Header -->
    <div class="settings-header">
        <div>
            <h1 class="settings-title">
                <i class="bi bi-gear-wide-connected"></i>
                Cài đặt Nâng cao
            </h1>
            <p class="settings-subtitle">Các tùy chọn cấu hình nâng cao và cài đặt hệ thống</p>
        </div>
    </div>

    <!-- Placeholder Content -->
    <div class="placeholder-content">
        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-cpu"></i>
            </div>
            <h3 class="placeholder-title">Hiệu năng</h3>
            <p class="placeholder-description">Tối ưu hóa hiệu năng và cấu hình tài nguyên hệ thống</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-code-square"></i>
            </div>
            <h3 class="placeholder-title">Cấu hình nâng cao</h3>
            <p class="placeholder-description">Truy cập các tùy chọn cấu hình nâng cao của hệ thống</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-database"></i>
            </div>
            <h3 class="placeholder-title">Cơ sở dữ liệu</h3>
            <p class="placeholder-description">Quản lý và tối ưu hóa cơ sở dữ liệu</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-bug"></i>
            </div>
            <h3 class="placeholder-title">Debug & Logs</h3>
            <p class="placeholder-description">Xem logs và các thông tin debug của hệ thống</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>
    </div>
</div>

@page "/settings/storage"
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Cài đặt Lưu trữ - EzioHost</PageTitle>

<div class="settings-container">
    <!-- Header -->
    <div class="settings-header">
        <div>
            <h1 class="settings-title">
                <i class="bi bi-cloud"></i>
                Cài đặt Lưu trữ
            </h1>
            <p class="settings-subtitle">Quản lý cài đặt lưu trữ và backup</p>
        </div>
    </div>

    <!-- Placeholder Content -->
    <div class="placeholder-content">
        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-hdd-stack"></i>
            </div>
            <h3 class="placeholder-title">Dung lượng lưu trữ</h3>
            <p class="placeholder-description">Xem và quản lý dung lượng lưu trữ đã sử dụng</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-cloud-upload"></i>
            </div>
            <h3 class="placeholder-title">Backup tự động</h3>
            <p class="placeholder-description">Cấu hình backup tự động cho video của bạn</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-archive"></i>
            </div>
            <h3 class="placeholder-title">Lưu trữ đám mây</h3>
            <p class="placeholder-description">Kết nối với các dịch vụ lưu trữ đám mây</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-trash"></i>
            </div>
            <h3 class="placeholder-title">Dọn dẹp tự động</h3>
            <p class="placeholder-description">Cấu hình tự động xóa các file không cần thiết</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>
    </div>
</div>
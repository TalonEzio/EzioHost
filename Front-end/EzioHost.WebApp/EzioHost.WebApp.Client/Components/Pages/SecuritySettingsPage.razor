@page "/settings/security"
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Cài đặt Bảo mật - EzioHost</PageTitle>

<div class="settings-container">
    <!-- Header -->
    <div class="settings-header">
        <div>
            <h1 class="settings-title">
                <i class="bi bi-shield-lock"></i>
                Cài đặt Bảo mật
            </h1>
            <p class="settings-subtitle">Cấu hình các tùy chọn bảo mật và quyền truy cập</p>
        </div>
    </div>

    <!-- Placeholder Content -->
    <div class="placeholder-content">
        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-shield-check"></i>
            </div>
            <h3 class="placeholder-title">Xác thực hai yếu tố</h3>
            <p class="placeholder-description">Bảo vệ tài khoản của bạn bằng xác thực hai yếu tố (2FA)</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-key"></i>
            </div>
            <h3 class="placeholder-title">Mật khẩu</h3>
            <p class="placeholder-description">Thay đổi mật khẩu và quản lý các phiên đăng nhập</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-device-hdd"></i>
            </div>
            <h3 class="placeholder-title">Thiết bị đã đăng nhập</h3>
            <p class="placeholder-description">Xem và quản lý các thiết bị đã đăng nhập vào tài khoản</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-shield-exclamation"></i>
            </div>
            <h3 class="placeholder-title">Quyền truy cập</h3>
            <p class="placeholder-description">Quản lý quyền truy cập và phân quyền người dùng</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>
    </div>
</div>

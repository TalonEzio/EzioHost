@page "/settings/notifications"
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Cài đặt Thông báo - EzioHost</PageTitle>

<div class="settings-container">
    <!-- Header -->
    <div class="settings-header">
        <div>
            <h1 class="settings-title">
                <i class="bi bi-bell"></i>
                Cài đặt Thông báo
            </h1>
            <p class="settings-subtitle">Cấu hình các tùy chọn thông báo và email</p>
        </div>
    </div>

    <!-- Placeholder Content -->
    <div class="placeholder-content">
        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-envelope"></i>
            </div>
            <h3 class="placeholder-title">Email thông báo</h3>
            <p class="placeholder-description">Nhận thông báo qua email khi có sự kiện quan trọng</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-bell-fill"></i>
            </div>
            <h3 class="placeholder-title">Thông báo trong ứng dụng</h3>
            <p class="placeholder-description">Nhận thông báo trực tiếp trong ứng dụng</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-check-circle"></i>
            </div>
            <h3 class="placeholder-title">Video đã xử lý xong</h3>
            <p class="placeholder-description">Nhận thông báo khi video đã được encode thành công</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-exclamation-triangle"></i>
            </div>
            <h3 class="placeholder-title">Cảnh báo hệ thống</h3>
            <p class="placeholder-description">Nhận cảnh báo về các vấn đề hệ thống và bảo trì</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>
    </div>
</div>

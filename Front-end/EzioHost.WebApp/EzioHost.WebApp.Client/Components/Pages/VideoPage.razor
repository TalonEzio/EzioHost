@page "/video"
@rendermode InteractiveServer
@attribute [Authorize]
<PageTitle>Video - EzioHost</PageTitle>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <!-- Header Section -->
    <div class="mb-6">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 mb-2 flex items-center">
                    <i class="bi bi-collection-play mr-2 text-primary-600"></i>
                    Thư viện Video
                </h1>
                <p class="text-gray-600">Quản lý và xem tất cả video của bạn</p>
            </div>
            <div class="flex gap-2">
                <button class="px-4 py-2 border border-primary-600 text-primary-600 rounded-lg hover:bg-primary-50 transition-colors font-medium" @onclick="ToggleViewMode">
                    <i class="bi bi-@(IsGridView ? "list" : "grid") mr-1"></i>
                    @(IsGridView ? "Danh sách" : "Lưới")
                </button>
                <a href="/video-upload" class="px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium inline-flex items-center">
                    <i class="bi bi-cloud-upload mr-1"></i>
                    Upload Video
                </a>
            </div>
        </div>
    </div>

    <!-- Filters and Search -->
    <div class="mb-6">
        <div class="bg-white border border-gray-200 rounded-xl shadow-sm p-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="md:col-span-1">
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="bi bi-search text-gray-400"></i>
                        </div>
                        <input type="text" class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500" placeholder="Tìm kiếm video..."
                               @bind="SearchTerm" @bind:event="oninput" @bind:after="OnFilterChanged"/>
                    </div>
                </div>
                <div>
                    <select class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500" @bind="SelectedShareType" @bind:after="OnFilterChanged">
                        <option value="">Tất cả loại chia sẻ</option>
                        @foreach (var value in Enum.GetValues<VideoEnum.VideoShareType>())
                        {
                            <option value="@((int)value)">@value.GetDescription()</option>
                        }
                    </select>
                </div>
                <div>
                    <select class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500" @bind="SortBy" @bind:after="OnFilterChanged">
                        <option value="created_desc">Mới nhất</option>
                        <option value="created_asc">Cũ nhất</option>
                        <option value="title_asc">Tên A-Z</option>
                        <option value="title_desc">Tên Z-A</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Video Grid/List -->
    <div>
        @if (IsLoading)
        {
            <div class="text-center py-12">
                <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600"></div>
                <p class="mt-4 text-gray-600">Đang tải video...</p>
            </div>
        }
        else if (FilteredVideos.Any())
        {
            @if (IsGridView)
            {
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                    @foreach (var video in FilteredVideos)
                    {
                        <div class="bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow-lg transition-shadow overflow-hidden flex flex-col">
                            <div class="relative">
                                <img src="@GetThumbnail(video)" class="w-full h-48 object-cover" alt="@video.Title">
                                <div class="absolute top-2 right-2">
                                    @if (video.CanPlay)
                                    {
                                        <span class="px-2 py-1 bg-green-500 text-white text-xs font-semibold rounded">Sẵn sàng</span>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 bg-yellow-500 text-white text-xs font-semibold rounded">Đang xử lý</span>
                                    }
                                </div>
                            </div>
                            <div class="p-4 flex-grow">
                                <h6 class="font-bold text-gray-900 truncate mb-2" title="@video.Title">@video.Title</h6>
                                <p class="text-sm text-gray-600 mb-1">
                                    @{
                                        var resolutions = string.Join(", ", video.VideoStreams.OrderBy(x => x.Resolution).Select(x => x.Resolution.GetDescription()));
                                        if (string.IsNullOrEmpty(resolutions)) resolutions = "Đang xử lý";
                                    }
                                    <i class="bi bi-badge-hd mr-1"></i>@resolutions
                                </p>
                                <p class="text-sm text-gray-600">
                                    <i class="bi bi-share mr-1"></i>@video.ShareType.GetDescription()
                                </p>
                            </div>
                            <div class="p-4 pt-0 space-y-2">
                                @if (video.CanPlay)
                                {
                                    <button class="w-full px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors text-sm font-medium" @onclick="() => PlayVideo(video)">
                                        <i class="bi bi-play-fill mr-1"></i>Phát
                                    </button>
                                }
                                <div class="flex gap-2">
                                    @if (video.CanPlay)
                                    {
                                        <a href="/video-share/@video.Id" target="_blank" class="flex-1 px-3 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors text-sm text-center" title="Video Share">
                                            <i class="bi bi-share-fill"></i>
                                        </a>
                                    }
                                    @if (video.CanUpscale)
                                    {
                                        <button class="flex-1 px-3 py-2 border border-yellow-500 text-yellow-600 rounded-lg hover:bg-yellow-50 transition-colors text-sm" @onclick="@(async () => await JsRuntime.NavigateToAsync($"/video-upscale/{video.Id}"))">
                                            <i class="bi bi-magic"></i>
                                        </button>
                                    }
                                    <button class="flex-1 px-3 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors text-sm" @onclick="() => ShowEditModal(video)">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="flex-1 px-3 py-2 border border-red-500 text-red-600 rounded-lg hover:bg-red-50 transition-colors text-sm" @onclick="() => DeleteVideo(video)" disabled="@(!video.CanPlay)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="space-y-4">
                    @foreach (var video in FilteredVideos)
                    {
                        <div class="bg-white border border-gray-200 rounded-xl p-4 hover:shadow-md transition-shadow">
                            <div class="flex items-center gap-4">
                                <img src="@GetThumbnail(video)" class="rounded-lg h-20 w-32 object-cover flex-shrink-0" alt="@video.Title">
                                <div class="flex-grow min-w-0">
                                    <h6 class="font-bold text-gray-900 mb-1 truncate">@video.Title</h6>
                                    <p class="text-sm text-gray-600 mb-1">
                                        @{
                                            var resolutions = string.Join(", ", video.VideoStreams.OrderBy(x => x.Resolution).Select(x => x.Resolution.GetDescription()));
                                            if (string.IsNullOrEmpty(resolutions)) resolutions = "Đang xử lý";
                                        }
                                        <i class="bi bi-badge-hd mr-1"></i>@resolutions
                                    </p>
                                    <div class="flex items-center gap-3 text-sm text-gray-600">
                                        <span>
                                            <i class="bi bi-share mr-1"></i>@video.ShareType.GetDescription()
                                        </span>
                                        @if (video.CanPlay)
                                        {
                                            <span class="px-2 py-1 bg-green-500 text-white text-xs font-semibold rounded">Sẵn sàng</span>
                                        }
                                        else
                                        {
                                            <span class="px-2 py-1 bg-yellow-500 text-white text-xs font-semibold rounded">Đang xử lý</span>
                                        }
                                    </div>
                                </div>
                                <div class="flex gap-2 flex-shrink-0">
                                    @if (video.CanPlay)
                                    {
                                        <button class="px-3 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors text-sm" @onclick="() => PlayVideo(video)">
                                            <i class="bi bi-play-fill"></i>
                                        </button>
                                        <a href="/api/video/download/@video.Id" target="_blank" class="px-3 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors text-sm">
                                            <i class="bi bi-download"></i>
                                        </a>
                                        <a href="/video-embed/@video.Id" target="_blank" class="px-3 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors text-sm" title="Video Embed">
                                            <i class="bi bi-code-slash"></i>
                                        </a>
                                        <a href="/video-share/@video.Id" target="_blank" class="px-3 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors text-sm" title="Video Share">
                                            <i class="bi bi-share-fill"></i>
                                        </a>
                                    }
                                    @if (video.CanUpscale)
                                    {
                                        <button class="px-3 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 transition-colors text-sm" @onclick="@(async () => await JsRuntime.NavigateToAsync($"/video-upscale/{video.Id}"))">
                                            <i class="bi bi-magic"></i>
                                        </button>
                                    }
                                    @if (video.VideoUpscales.Any() && video.VideoUpscales.First().Status == VideoEnum.VideoUpscaleStatus.Ready)
                                    {
                                        <a href="/api/video/download-upscale/@video.Id" target="_blank" class="px-3 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors text-sm">
                                            <i class="bi bi-download"></i> Upscale
                                        </a>
                                    }
                                    <button class="px-3 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors text-sm" @onclick="() => ShowEditModal(video)">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="px-3 py-2 border border-red-500 text-red-600 rounded-lg hover:bg-red-50 transition-colors text-sm" @onclick="() => DeleteVideo(video)" disabled="@(!video.CanPlay)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        }
        else
        {
            <div class="text-center py-12">
                <i class="bi bi-collection-play text-gray-400 text-6xl"></i>
                <h4 class="mt-4 text-xl font-semibold text-gray-600">Không có video nào</h4>
                <p class="text-gray-500 mt-2">Bắt đầu bằng cách upload video đầu tiên của bạn.</p>
                <a href="/video-upload" class="inline-flex items-center mt-4 px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium">
                    <i class="bi bi-cloud-upload mr-2"></i>Upload Video
                </a>
            </div>
        }
    </div>
</div>

<!-- Video Player Modal -->
@if (SelectedVideo != null)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4" @onclick="ClosePlayer">
        <div class="bg-white rounded-xl max-w-4xl w-full max-h-[90vh] overflow-auto" @onclick:stopPropagation="true">
            <div class="flex justify-between items-center p-4 border-b border-gray-200">
                <h5 class="text-lg font-semibold text-gray-900">@SelectedVideo.Title</h5>
                <button type="button" class="text-gray-400 hover:text-gray-600" @onclick="ClosePlayer">
                    <i class="bi bi-x-lg text-xl"></i>
                </button>
            </div>
            <div class="p-4">
                <div id="player"></div>
            </div>
        </div>
    </div>
}

<!-- Edit Video Sidebar -->
@if (EditingVideo != null)
{
    <div class="edit-video-overlay" @onclick="CloseEditModal">
        <div class="edit-video-sidebar" @onclick:stopPropagation="true">
            <div class="edit-video-header">
                <h5 class="edit-video-title">Chỉnh sửa Video</h5>
                <button type="button" class="edit-video-close" @onclick="CloseEditModal">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="edit-video-content">
                <div class="edit-video-section">
                    <label class="edit-video-label">Tiêu đề</label>
                    <InputText @bind-Value="EditingVideo.Title" class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"/>
                </div>
                <div class="edit-video-section">
                    <label class="edit-video-label">Loại chia sẻ</label>
                    <InputSelect @bind-Value="EditingVideo.ShareType" class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                        @foreach (var value in Enum.GetValues<VideoEnum.VideoShareType>())
                        {
                            <option value="@value">@value.GetDescription()</option>
                        }
                    </InputSelect>
                </div>
                <div class="edit-video-section">
                    <div class="edit-video-divider"></div>
                    <VideoSubtitleManager VideoId="@EditingVideo.Id" OnSubtitleChanged="HandleSubtitleChanged" />
                </div>
            </div>
            <div class="edit-video-footer">
                <button type="button" class="edit-video-btn-cancel" @onclick="CloseEditModal">Hủy</button>
                <button type="button" class="edit-video-btn-save" @onclick="() => UpdateVideo(EditingVideo)">Lưu</button>
            </div>
        </div>
    </div>
}

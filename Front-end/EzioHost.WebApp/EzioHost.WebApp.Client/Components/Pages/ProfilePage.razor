@page "/profile"
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Hồ sơ - EzioHost</PageTitle>

<!-- Hero Section -->
<section class="bg-gradient-to-br from-primary-600 via-primary-700 to-purple-800 text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <div class="inline-flex items-center justify-center w-24 h-24 bg-white/20 rounded-full mb-4">
                <i class="bi bi-person-circle text-5xl"></i>
            </div>
            <h1 class="text-3xl lg:text-4xl font-bold mb-2">Hồ sơ cá nhân</h1>
            <p class="text-gray-200">Quản lý thông tin tài khoản của bạn</p>
        </div>
    </div>
</section>

<!-- Profile Content -->
<section class="py-12 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Left Sidebar - User Info Card -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <div class="text-center">
                        <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-primary-500 to-purple-600 rounded-full mb-4">
                            <span class="text-3xl font-bold text-white">@Initials</span>
                        </div>
                        <h2 class="text-xl font-bold text-gray-900 mb-1">@FullName</h2>
                        <p class="text-gray-600 text-sm mb-4">@Email</p>
                        @if (IsEmailVerified)
                        {
                            <span class="inline-flex items-center px-3 py-1 bg-green-100 text-green-800 rounded-full text-xs font-medium">
                                <i class="bi bi-check-circle-fill mr-1"></i>Email đã xác thực
                            </span>
                        }
                        else
                        {
                            <span class="inline-flex items-center px-3 py-1 bg-yellow-100 text-yellow-800 rounded-full text-xs font-medium">
                                <i class="bi bi-exclamation-circle mr-1"></i>Email chưa xác thực
                            </span>
                        }
                    </div>
                    <div class="mt-6 pt-6 border-t border-gray-200">
                        <div class="space-y-3">
                            <div class="flex items-center text-sm">
                                <i class="bi bi-person text-gray-400 mr-3 w-5"></i>
                                <span class="text-gray-600">Username:</span>
                                <span class="ml-auto font-medium text-gray-900">@Username</span>
                            </div>
                            <div class="flex items-center text-sm">
                                <i class="bi bi-shield-check text-gray-400 mr-3 w-5"></i>
                                <span class="text-gray-600">User ID:</span>
                                <span class="ml-auto font-mono text-xs text-gray-500">@UserId</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Content - Details -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Account Information -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                        <i class="bi bi-info-circle text-primary-600 mr-2"></i>
                        Thông tin tài khoản
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Họ</label>
                            <div class="px-3 py-2 bg-gray-50 rounded-lg text-gray-900">@GivenName</div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Tên</label>
                            <div class="px-3 py-2 bg-gray-50 rounded-lg text-gray-900">@Surname</div>
                        </div>
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                            <div class="px-3 py-2 bg-gray-50 rounded-lg text-gray-900 flex items-center justify-between">
                                <span>@Email</span>
                                @if (IsEmailVerified)
                                {
                                    <i class="bi bi-check-circle-fill text-green-500"></i>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Roles & Permissions -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                        <i class="bi bi-shield-lock text-primary-600 mr-2"></i>
                        Vai trò và quyền hạn
                    </h3>
                    <div class="flex flex-wrap gap-2">
                        @foreach (var role in Roles)
                        {
                            <span class="inline-flex items-center px-3 py-1 bg-primary-100 text-primary-800 rounded-lg text-sm font-medium">
                                <i class="bi bi-person-badge mr-1"></i>@role
                            </span>
                        }
                    </div>
                </div>

                <!-- Resource Limits -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                        <i class="bi bi-speedometer2 text-primary-600 mr-2"></i>
                        Giới hạn tài nguyên
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="p-4 bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-sm font-medium text-gray-700">Tốc độ upload tối đa</span>
                                <i class="bi bi-upload text-blue-600"></i>
                            </div>
                            <div class="text-2xl font-bold text-blue-900">@UploadMaxSpeedMb MB/s</div>
                        </div>
                        <div class="p-4 bg-gradient-to-br from-green-50 to-green-100 rounded-lg">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-sm font-medium text-gray-700">Dung lượng lưu trữ</span>
                                <i class="bi bi-hdd text-green-600"></i>
                            </div>
                            <div class="text-2xl font-bold text-green-900">@StorageDisplay</div>
                        </div>
                    </div>
                </div>

                <!-- Session Information -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                        <i class="bi bi-clock-history text-primary-600 mr-2"></i>
                        Thông tin phiên đăng nhập
                    </h3>
                    <div class="space-y-3">
                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                            <span class="text-sm text-gray-600">Thời gian xác thực</span>
                            <span class="text-sm font-medium text-gray-900">@AuthTimeDisplay</span>
                        </div>
                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                            <span class="text-sm text-gray-600">Phiên đăng nhập hết hạn</span>
                            <span class="text-sm font-medium text-gray-900">@ExpirationDisplay</span>
                        </div>
                        <div class="flex justify-between items-center py-2">
                            <span class="text-sm text-gray-600">Session ID</span>
                            <span class="text-sm font-mono text-xs text-gray-500">@SessionId</span>
                        </div>
                    </div>
                </div>

                <!-- All Claims (Collapsible) -->
                @* <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                    <button class="w-full px-6 py-4 text-left flex justify-between items-center focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-inset"
                            @onclick="() => _showAllClaims = !_showAllClaims">
                        <span class="font-semibold text-gray-900 flex items-center">
                            <i class="bi bi-list-ul text-primary-600 mr-2"></i>
                            Tất cả Claims (Debug)
                        </span>
                        <i class="bi bi-chevron-down text-gray-500 text-xl transition-transform @(_showAllClaims ? "rotate-180" : "")"></i>
                    </button>
                    @if (_showAllClaims)
                    {
                        <div class="px-6 pb-4">
                            <div class="bg-gray-50 rounded-lg p-4 max-h-96 overflow-y-auto">
                                <table class="min-w-full text-sm">
                                    <thead class="bg-gray-100">
                                        <tr>
                                            <th class="px-3 py-2 text-left text-xs font-medium text-gray-700">Type</th>
                                            <th class="px-3 py-2 text-left text-xs font-medium text-gray-700">Value</th>
                                        </tr>
                                    </thead>
                                    <tbody class="divide-y divide-gray-200">
                                        @foreach (var claim in AllClaims)
                                        {
                                            <tr>
                                                <td class="px-3 py-2 font-mono text-xs text-gray-600">@claim.Type</td>
                                                <td class="px-3 py-2 text-gray-900 break-all">@claim.Value</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                </div> *@
            </div>
        </div>
    </div>
</section>
@page "/settings/appearance"
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Cài đặt Giao diện - EzioHost</PageTitle>

<div class="settings-container">
    <!-- Header -->
    <div class="settings-header">
        <div>
            <h1 class="settings-title">
                <i class="bi bi-palette"></i>
                Cài đặt Giao diện
            </h1>
            <p class="settings-subtitle">Tùy chỉnh theme, ngôn ngữ và các tùy chọn hiển thị</p>
        </div>
    </div>

    <!-- Placeholder Content -->
    <div class="placeholder-content">
        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-brightness-high"></i>
            </div>
            <h3 class="placeholder-title">Theme</h3>
            <p class="placeholder-description">Chọn theme sáng hoặc tối cho giao diện</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-translate"></i>
            </div>
            <h3 class="placeholder-title">Ngôn ngữ</h3>
            <p class="placeholder-description">Thay đổi ngôn ngữ hiển thị của ứng dụng</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-fonts"></i>
            </div>
            <h3 class="placeholder-title">Font chữ</h3>
            <p class="placeholder-description">Tùy chỉnh kích thước và kiểu font chữ</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-layout-sidebar"></i>
            </div>
            <h3 class="placeholder-title">Bố cục</h3>
            <p class="placeholder-description">Tùy chỉnh cách hiển thị và sắp xếp các thành phần</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>
    </div>
</div>
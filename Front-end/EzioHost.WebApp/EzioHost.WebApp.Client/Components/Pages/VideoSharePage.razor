@page "/video-share/{VideoId:guid}"
@using Microsoft.AspNetCore.Components.Sections
@layout NullLayout

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-share-fill me-2"></i>
                        Chi tiết Video
                    </h4>
                </div>
                <div class="card-body">
                    @if (Video == null)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Đang tải...</span>
                            </div>
                            <p class="mt-3 text-muted">Đang tải thông tin video...</p>
                        </div>
                    }
                    else
                    {
                        <div class="row mb-4">
                            <div class="col-md-8">
                                <h3 class="card-title">@Video.Title</h3>
                                <p class="text-muted">
                                    <i class="bi bi-calendar me-1"></i> Ngày tạo: @Video.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                </p>
                            </div>
                            <div class="col-md-4 text-end">
                                <a href="/api/video/download/@Video.Id" target="_blank" class="btn btn-success">
                                    <i class="bi bi-download me-1"></i> Download
                                </a>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div id="player" data-video-player="@Video.PlayerJsMetadata" data-video-poster="@Video.Thumbnail" style="width: 100%; height: 400px;"></div>

                            <div id="videoId" data-video-id="@Video.Id" style="display: none;"></div>
                        </div>

                        <div class="mb-4">
                            <h5>
                                <i class="bi bi-code-slash me-2"></i>
                                Thông tin nhúng
                            </h5>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Link nhúng:</label>
                                <div class="input-group">
                                    <input type="text" class="form-control bg-light" value="" readonly id="embedLink">
                                    <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard('embedLink')">
                                        <i class="bi bi-clipboard"></i> Sao chép
                                    </button>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Iframe: </label>
                                <div class="input-group">
                                    <textarea class="form-control bg-light" rows="3" readonly id="iframeCode"></textarea>
                                    <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard('iframeCode')">
                                        <i class="bi bi-clipboard"></i> Sao chép
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<SectionContent SectionName="@SectionNames.FooterSection">
    <script src="/Components/Pages/VideoSharePage.Razor.js"></script>
</SectionContent>
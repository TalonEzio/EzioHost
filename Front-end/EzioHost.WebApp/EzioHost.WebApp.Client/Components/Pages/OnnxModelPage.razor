@page "/onnx"
@rendermode InteractiveServer


<PageTitle>ONNX Models</PageTitle>

<HeadContent>
    <link rel="stylesheet" href="https://unpkg.com/slick-image-compare/dist/slick-image-compare.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</HeadContent>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
        <div>
            <h2 class="text-3xl font-bold text-gray-900 flex items-center">
                <i class="bi bi-cpu mr-2 text-primary-600"></i>ONNX Models
            </h2>
            <p class="text-gray-600 mt-2">Manage your AI upscaling models</p>
        </div>
        <button class="px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors shadow-sm font-medium" type="button" @onclick=@(() => JsRuntime.NavigateTo("onnx-create"))>
            <i class="bi bi-plus-circle mr-2"></i>Create New Model
        </button>
    </div>

    @if (RendererInfo.IsInteractive)
    {
        @if (OnnxModels is not null && OnnxModels.Any())
        {
            <div class="bg-white border border-gray-200 rounded-xl shadow-sm mb-6 overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <i class="bi bi-tag mr-2"></i>Name
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <i class="bi bi-arrow-up-circle mr-2"></i>Scale
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <i class="bi bi-speedometer2 mr-2"></i>Precision
                            </th>
                            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider pr-6">
                                <i class="bi bi-gear mr-2"></i>Actions
                            </th>
                        </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var onnxModel in OnnxModels)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <InputText @bind-Value="@onnxModel.Name" class="block w-full px-3 py-2 border border-gray-300 rounded-lg text-sm bg-gray-50" placeholder="Model name" readonly></InputText>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap" style="width: 150px;">
                                    <InputNumber @bind-Value="@onnxModel.Scale" class="block w-full px-3 py-2 border border-gray-300 rounded-lg text-sm bg-gray-50" min="1" max="4" readonly></InputNumber>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap" style="width: 200px;">
                                    <InputSelect @bind-Value="@onnxModel.ElementType" class="block w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                                        @foreach (var precision in Enum.GetValues<TensorElementType>())
                                        {
                                            <option value="@precision">@precision.GetDescription()</option>
                                        }
                                    </InputSelect>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right pr-6">
                                    <div class="flex justify-end gap-2">
                                        <button type="button" class="px-3 py-1 border border-green-500 text-green-600 rounded-lg hover:bg-green-50 transition-colors text-sm" @onclick="@(() => OnPreviewClicked(onnxModel))" title="Preview">
                                            <i class="bi bi-eye mr-1"></i> Preview
                                        </button>
                                        @if (onnxModel.CanPreview)
                                        {
                                            <button type="button" class="px-3 py-1 border border-blue-500 text-blue-600 rounded-lg hover:bg-blue-50 transition-colors text-sm" @onclick="@(() => OnRemovePreviewClicked(onnxModel))" title="Remove Preview">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        }
                                        <button type="button" class="px-3 py-1 border border-red-500 text-red-600 rounded-lg hover:bg-red-50 transition-colors text-sm" @onclick="() => OnDeleteModelClicked(onnxModel)" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Image Comparison Section -->
            <div class="bg-white border border-gray-200 rounded-xl shadow-sm mb-6" style="display: @(!string.IsNullOrEmpty(_beforeImage) && !string.IsNullOrEmpty(_afterImage) ? "block" : "none")">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h5 class="text-lg font-semibold text-gray-900 flex items-center">
                        <i class="bi bi-images mr-2"></i>Image Comparison
                    </h5>
                </div>
                <div class="p-6">
                    <div class="flex justify-center">
                        <div class="w-full max-w-4xl">
                            <ImageCompare @ref="ImageCompare" BeforeImage="@_beforeImage" AfterImage="@_afterImage"/>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Test Model Section -->
            <div class="bg-white border border-gray-200 rounded-xl shadow-sm mb-6" style="display: @(_selectedOnnxModelDto != null && string.IsNullOrEmpty(_beforeImage) && string.IsNullOrEmpty(_afterImage) ? "block" : "none")">
                <div class="px-6 py-4 bg-primary-600 text-white rounded-t-xl">
                    <h5 class="text-lg font-semibold flex items-center">
                        <i class="bi bi-lightning-charge mr-2"></i>Test Model: @(_selectedOnnxModelDto?.Name ?? "")
                    </h5>
                </div>
                <div class="p-6">
                    <div class="text-center py-8" style="display: @(_upscaling ? "block" : "none")">
                        <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600 mb-4"></div>
                        <p class="text-gray-600 flex items-center justify-center">
                            <i class="bi bi-hourglass-split mr-2"></i>Processing upscale, please wait...
                        </p>
                    </div>

                    <div class="max-w-2xl mx-auto" style="display: @(!_upscaling ? "block" : "none")">
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="bi bi-cloud-upload mr-2"></i>Select Image File
                        </label>
                        <InputFile OnChange="OnDemoInputFileChanged" accept=".jpg,.png,.jpeg" class="block w-full px-3 py-2 border border-gray-300 rounded-lg mb-4"/>
                        <div>
                            <button type="button" class="w-full px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors font-medium" @onclick=@(() => OnTestUpscaleClicked(_selectedDemoInputFile, _selectedOnnxModelDto))>
                                <i class="bi bi-play-circle mr-2"></i>Start Upscale Test
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Empty State Section -->
            <div class="bg-gray-50 border border-gray-200 rounded-xl shadow-sm" style="display: @(_selectedOnnxModelDto == null && string.IsNullOrEmpty(_beforeImage) && string.IsNullOrEmpty(_afterImage) ? "block" : "none")">
                <div class="text-center py-12">
                    <i class="bi bi-info-circle text-gray-400 text-5xl"></i>
                    <h4 class="mt-4 text-xl font-semibold text-gray-600">Please select a model to test</h4>
                    <p class="text-gray-500 mt-2">Click the Preview button on any model to get started</p>
                </div>
            </div>
        }
        else
        {
            <div class="bg-gray-50 border border-gray-200 rounded-xl shadow-sm">
                <div class="text-center py-12">
                    <i class="bi bi-inbox text-gray-400 text-6xl"></i>
                    <h4 class="mt-4 text-xl font-semibold text-gray-600">@_message</h4>
                    <p class="text-gray-500 mt-2 mb-6">Get started by creating your first ONNX model</p>
                    <button class="px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium" type="button" @onclick=@(() => JsRuntime.NavigateTo("onnx-create"))>
                        <i class="bi bi-plus-circle mr-2"></i>Create Your First Model
                    </button>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-12">
            <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600"></div>
            <p class="text-gray-600 mt-4">Loading models...</p>
        </div>
    }
</div>
@page "/onnx"
@rendermode InteractiveServer


<PageTitle>ONNX Models</PageTitle>

<HeadContent>
    <link rel="stylesheet" href="https://unpkg.com/slick-image-compare/dist/slick-image-compare.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</HeadContent>

<div class="container-fluid py-4">
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h2 class="mb-0">
                <i class="bi bi-cpu me-2"></i>ONNX Models
            </h2>
            <p class="text-muted mt-2">Manage your AI upscaling models</p>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary shadow-sm" type="button" @onclick=@(() => JsRuntime.NavigateTo("onnx-create"))>
                <i class="bi bi-plus-circle me-2"></i>Create New Model
            </button>
        </div>
    </div>

    @if (RendererInfo.IsInteractive)
    {
        @if (OnnxModels is not null && OnnxModels.Any())
        {
            <div class="card shadow-sm mb-4">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                            <tr>
                                <th class="px-4 py-3">
                                    <i class="bi bi-tag me-2"></i>Name
                                </th>
                                <th class="py-3">
                                    <i class="bi bi-arrow-up-circle me-2"></i>Scale
                                </th>
                                <th class="py-3">
                                    <i class="bi bi-speedometer2 me-2"></i>Precision
                                </th>
                                <th class="py-3 text-end pe-4">
                                    <i class="bi bi-gear me-2"></i>Actions
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var onnxModel in OnnxModels)
                            {
                                <tr class="align-middle">
                                    <td class="px-4">
                                        <InputText @bind-Value="@onnxModel.Name" class="form-control form-control-sm" placeholder="Model name" readonly></InputText>
                                    </td>
                                    <td style="width: 150px;">
                                        <InputNumber @bind-Value="@onnxModel.Scale" class="form-control form-control-sm" min="1" max="4" readonly></InputNumber>
                                    </td>
                                    <td style="width: 200px;">
                                        <InputSelect @bind-Value="@onnxModel.ElementType" class="form-select form-select-sm">
                                            @foreach (var precision in Enum.GetValues<TensorElementType>())
                                            {
                                                <option value="@precision">@precision.GetDescription()</option>
                                            }
                                        </InputSelect>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button type="button" class="btn btn-outline-success" @onclick="@(() => OnPreviewClicked(onnxModel))" title="Preview">
                                                <i class="bi bi-eye"></i> Preview
                                            </button>
                                            @if (onnxModel.CanPreview)
                                            {
                                                <button type="button" class="btn btn-outline-info" @onclick="@(() => OnRemovePreviewClicked(onnxModel))" title="Remove Preview">
                                                    <i class="bi bi-x-circle"></i>
                                                </button>
                                            }
                                            <button type="button" class="btn btn-outline-danger" @onclick="() => OnDeleteModelClicked(onnxModel)" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Image Comparison Section -->
            <div class="card shadow-sm" style="display: @(!string.IsNullOrEmpty(_beforeImage) && !string.IsNullOrEmpty(_afterImage) ? "block" : "none")">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-images me-2"></i>Image Comparison
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-12 col-lg-10">
                            <ImageCompare @ref="ImageCompare" BeforeImage="@_beforeImage" AfterImage="@_afterImage"/>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Test Model Section -->
            <div class="card shadow-sm" style="display: @(_selectedOnnxModelDto != null && string.IsNullOrEmpty(_beforeImage) && string.IsNullOrEmpty(_afterImage) ? "block" : "none")">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning-charge me-2"></i>Test Model: @(_selectedOnnxModelDto?.Name ?? "")
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-5" style="display: @(_upscaling ? "block" : "none")">
                        <div class="spinner-border text-primary mb-3" role="status" style="height: 3rem; width: 3rem;">
                            <span class="visually-hidden">Processing...</span>
                        </div>
                        <p class="text-muted mb-0">
                            <i class="bi bi-hourglass-split me-2"></i>Processing upscale, please wait...
                        </p>
                    </div>

                    <div class="row" style="display: @(!_upscaling ? "block" : "none")">
                        <div class="col-md-8 mx-auto">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-cloud-upload me-2"></i>Select Image File
                            </label>
                            <InputFile OnChange="OnDemoInputFileChanged" accept=".jpg,.png,.jpeg" class="form-control mb-3"/>
                            <div class="d-grid">
                                <button type="button" class="btn btn-success" @onclick=@(() => OnTestUpscaleClicked(_selectedDemoInputFile, _selectedOnnxModelDto))>
                                    <i class="bi bi-play-circle me-2"></i>Start Upscale Test
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Empty State Section -->
            <div class="card shadow-sm border-0 bg-light" style="display: @(_selectedOnnxModelDto == null && string.IsNullOrEmpty(_beforeImage) && string.IsNullOrEmpty(_afterImage) ? "block" : "none")">
                <div class="card-body text-center py-5">
                    <i class="bi bi-info-circle text-muted" style="font-size: 3rem;"></i>
                    <h4 class="mt-3 text-muted">Please select a model to test</h4>
                    <p class="text-muted mb-0">Click the Preview button on any model to get started</p>
                </div>
            </div>
        }
        else
        {
            <div class="card shadow-sm border-0 bg-light">
                <div class="card-body text-center py-5">
                    <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                    <h4 class="mt-3 text-muted">@_message</h4>
                    <p class="text-muted mb-4">Get started by creating your first ONNX model</p>
                    <button class="btn btn-primary" type="button" @onclick=@(() => JsRuntime.NavigateTo("onnx-create"))>
                        <i class="bi bi-plus-circle me-2"></i>Create Your First Model
                    </button>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="text-muted mt-3">Loading models...</p>
        </div>
    }
</div>
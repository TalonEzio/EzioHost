@page "/settings/subtitle-transcribe"
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Cài đặt Audio Transcribing - EzioHost</PageTitle>

<div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="flex items-center gap-3 text-3xl font-bold text-gray-900 mb-2">
            <i class="bi bi-mic text-blue-600 text-2xl"></i>
            Cài đặt Audio Transcribing
        </h1>
        <p class="text-gray-600">Cấu hình Whisper model và GPU cho tính năng transcribing audio</p>
    </div>

    @if (IsLoading)
    {
        <div class="flex flex-col items-center justify-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mb-4"></div>
            <p class="text-gray-600">Đang tải cài đặt...</p>
        </div>
    }
    else
    {
        <!-- Settings Form -->
        <div class="bg-white border border-gray-200 rounded-xl shadow-sm">
            <!-- Enable/Disable Section -->
            <div class="p-6 border-b border-gray-200">
                <div class="flex items-center gap-3 mb-2">
                    <i class="bi bi-toggle-on text-blue-600 text-xl"></i>
                    <h2 class="text-xl font-semibold text-gray-900">Bật/Tắt Tính năng</h2>
                </div>
                <p class="text-sm text-gray-600 mb-4">Kích hoạt hoặc vô hiệu hóa tính năng Audio Transcribing</p>

                <div class="space-y-3">
                    <label class="flex items-center justify-between p-4 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100 transition-colors">
                        <div class="flex items-center gap-3">
                            <i class="bi bi-mic text-gray-700"></i>
                            <span class="font-medium text-gray-900">Bật Audio Transcribing</span>
                        </div>
                        <div class="relative inline-block w-12 h-6">
                            <input type="checkbox" 
                                   checked="@Settings.IsEnabled" 
                                   @onchange="@(e => Settings.IsEnabled = (bool)(e.Value ?? false))"
                                   class="sr-only peer"/>
                            <div class="w-12 h-6 bg-gray-300 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-blue-500 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                        </div>
                    </label>
                    <p class="text-sm text-gray-600 ml-11">
                        Khi bật, bạn có thể sử dụng tính năng transcribing audio để tự động tạo subtitle từ video.
                    </p>
                </div>
            </div>

            <!-- Model Selection Section -->
            <div class="p-6 border-b border-gray-200">
                <div class="flex items-center gap-3 mb-2">
                    <i class="bi bi-cpu text-blue-600 text-xl"></i>
                    <h2 class="text-xl font-semibold text-gray-900">Whisper Model</h2>
                </div>
                <p class="text-sm text-gray-600 mb-4">Chọn model Whisper để sử dụng cho transcription</p>

                <div class="space-y-4">
                    <div>
                        <label class="flex items-center gap-2 text-sm font-medium text-gray-700 mb-2">
                            <i class="bi bi-box"></i>
                            Model Type:
                        </label>
                        <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900 bg-white"
                                @bind="SelectedModelType" 
                                @bind:after="OnModelTypeChanged">
                            @foreach (var model in AvailableModels)
                            {
                                <option value="@model.Type">@model.Name (@model.Size) - @model.Speed, @model.Accuracy</option>
                            }
                        </select>
                    </div>

                    @if (SelectedModelInfo != null)
                    {
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 p-4 bg-blue-50 rounded-lg">
                            <div class="flex items-center gap-2">
                                <i class="bi bi-hdd text-blue-600"></i>
                                <div>
                                    <span class="text-xs text-gray-600">Kích thước:</span>
                                    <span class="block font-medium text-gray-900">@SelectedModelInfo.Size</span>
                                </div>
                            </div>
                            <div class="flex items-center gap-2">
                                <i class="bi bi-speedometer2 text-blue-600"></i>
                                <div>
                                    <span class="text-xs text-gray-600">Tốc độ:</span>
                                    <span class="block font-medium text-gray-900">@SelectedModelInfo.Speed</span>
                                </div>
                            </div>
                            <div class="flex items-center gap-2">
                                <i class="bi bi-bullseye text-blue-600"></i>
                                <div>
                                    <span class="text-xs text-gray-600">Độ chính xác:</span>
                                    <span class="block font-medium text-gray-900">@SelectedModelInfo.Accuracy</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- GPU Settings Section -->
            <div class="p-6 border-b border-gray-200">
                <div class="flex items-center gap-3 mb-2">
                    <i class="bi bi-gpu-card text-blue-600 text-xl"></i>
                    <h2 class="text-xl font-semibold text-gray-900">GPU Settings</h2>
                </div>
                <p class="text-sm text-gray-600 mb-4">Cấu hình sử dụng GPU để tăng tốc transcription</p>

                <div class="space-y-4">
                    <div class="space-y-3">
                        <label class="flex items-center justify-between p-4 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100 transition-colors">
                            <div class="flex items-center gap-3">
                                <i class="bi bi-gpu-card text-gray-700"></i>
                                <span class="font-medium text-gray-900">Sử dụng GPU</span>
                            </div>
                            <div class="relative inline-block w-12 h-6">
                                <input type="checkbox" 
                                       checked="@Settings.UseGpu" 
                                       @onchange="@(e => Settings.UseGpu = (bool)(e.Value ?? false))"
                                       class="sr-only peer"/>
                                <div class="w-12 h-6 bg-gray-300 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-blue-500 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                            </div>
                        </label>
                        <p class="text-sm text-gray-600 ml-11">
                            Sử dụng GPU có thể tăng tốc transcription đáng kể. Nếu GPU không khả dụng, hệ thống sẽ tự động fallback về CPU.
                        </p>
                    </div>

                    @if (Settings.UseGpu)
                    {
                        <div class="ml-11 space-y-2">
                            <label class="flex items-center gap-2 text-sm font-medium text-gray-700">
                                <i class="bi bi-123"></i>
                                GPU Device ID:
                            </label>
                            <input type="number" 
                                   class="w-full max-w-xs px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900"
                                   @bind="GpuDeviceId" 
                                   @bind:after="OnGpuDeviceIdChanged"
                                   min="0" 
                                   step="1"/>
                            <p class="text-xs text-gray-500">Nhập ID của GPU device (mặc định: 0)</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Actions -->
            <div class="p-6 flex justify-end gap-3">
                <button class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors font-medium disabled:opacity-50 disabled:cursor-not-allowed"
                        @onclick="ResetToDefaults" 
                        disabled="@(IsSaving || IsLoading)">
                    <i class="bi bi-arrow-counterclockwise mr-2"></i>
                    Đặt lại mặc định
                </button>
                <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-2"
                        @onclick="SaveSettings" 
                        disabled="@(IsSaving || IsLoading)">
                    @if (IsSaving)
                    {
                        <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-white"></div>
                        <span>Đang lưu...</span>
                    }
                    else
                    {
                        <i class="bi bi-check-circle"></i>
                        <span>Lưu cài đặt</span>
                    }
                </button>
            </div>

            @if (!string.IsNullOrEmpty(SuccessMessage))
            {
                <div class="mx-6 mb-6 p-4 bg-green-50 border border-green-200 rounded-lg flex items-center gap-2 text-green-700">
                    <i class="bi bi-check-circle text-green-600"></i>
                    <span>@SuccessMessage</span>
                </div>
            }

            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="mx-6 mb-6 p-4 bg-red-50 border border-red-200 rounded-lg flex items-center gap-2 text-red-700">
                    <i class="bi bi-exclamation-circle text-red-600"></i>
                    <span>@ErrorMessage</span>
                </div>
            }
        </div>
    }
</div>

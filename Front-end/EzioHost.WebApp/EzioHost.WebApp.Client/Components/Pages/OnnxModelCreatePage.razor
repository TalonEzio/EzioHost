@page "/onnx-create"
@rendermode InteractiveServer


<PageTitle>Create ONNX Model</PageTitle>
<HeadContent>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tom-select/dist/css/tom-select.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</HeadContent>

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/onnx" class="text-decoration-none">
                            <i class="bi bi-cpu me-1"></i>ONNX Models
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Create New</li>
                </ol>
            </nav>
            <h2 class="mb-0">
                <i class="bi bi-plus-circle me-2"></i>Create ONNX Model
            </h2>
            <p class="text-muted mt-2">Configure and upload a new AI upscaling model</p>
        </div>
    </div>

    @if (RendererInfo.IsInteractive)
    {
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <EditForm Model="Onnx" Enhance="true" FormName="FrmCreateOnnx" OnValidSubmit="CreateNewOnnxModelSubmit">
                            <DataAnnotationsValidator/>

                            @if (_isSubmitting)
                            {
                                <div class="alert alert-info d-flex align-items-center" role="alert">
                                    <div class="spinner-border spinner-border-sm me-3" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    <div>Creating model, please wait...</div>
                                </div>
                            }

                            <div class="alert alert-danger" role="alert" style="display: none;">
                                <ValidationSummary/>
                            </div>

                            <div class="row mb-4">
                                <label class="col-md-3 col-form-label fw-semibold">
                                    <i class="bi bi-tag me-2"></i>Model Name <span class="text-danger">*</span>
                                </label>
                                <div class="col-md-9">
                                    <InputText @bind-Value="Onnx.Name" class="form-control" placeholder="e.g., RealESRGAN x4"/>
                                    <small class="text-muted">A descriptive name for your model</small>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <label class="col-md-3 col-form-label fw-semibold">
                                    <i class="bi bi-arrow-up-circle me-2"></i>Scale Factor <span class="text-danger">*</span>
                                </label>
                                <div class="col-md-9">
                                    <InputNumber @bind-Value="Onnx.Scale" class="form-control" min="1" max="8"/>
                                    <small class="text-muted">Output resolution multiplier (1x - 8x)</small>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-3">
                                    <label class="form-label fw-semibold">
                                        <i class="bi bi-aspect-ratio me-2"></i>Input Dimensions
                                    </label>
                                </div>
                                <div class="col-md-9">
                                    <div class="row g-3">
                                        <div class="col-sm-6">
                                            <label class="form-label text-muted small">Width (px)</label>
                                            <InputNumber @bind-Value="Onnx.MustInputWidth" class="form-control" placeholder="e.g., 1920"/>
                                        </div>
                                        <div class="col-sm-6">
                                            <label class="form-label text-muted small">Height (px)</label>
                                            <InputNumber @bind-Value="Onnx.MustInputHeight" class="form-control" placeholder="e.g., 1080"/>
                                        </div>
                                    </div>
                                    <small class="text-muted">Required input dimensions for the model</small>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <label class="col-md-3 col-form-label fw-semibold">
                                    <i class="bi bi-speedometer2 me-2"></i>Precision <span class="text-danger">*</span>
                                </label>
                                <div class="col-md-9">
                                    <InputSelect @bind-Value="Onnx.ElementType" class="form-select">
                                        @foreach (var value in Enum.GetValues<TensorElementType>())
                                        {
                                            <option value="@value">@value</option>
                                        }
                                    </InputSelect>
                                    <small class="text-muted">Model precision affects performance and quality</small>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <label class="col-md-3 col-form-label fw-semibold">
                                    <i class="bi bi-file-earmark-binary me-2"></i>Model File <span class="text-danger">*</span>
                                </label>
                                <div class="col-md-9">
                                    <InputFile class="form-control" accept=".onnx" OnChange="OnFileChanged"/>
                                    <small class="text-muted">Upload your .onnx model file</small>
                                    @if (_file != null)
                                    {
                                        <div class="alert alert-success mt-2 mb-0 py-2" role="alert">
                                            <i class="bi bi-check-circle me-2"></i>
                                            <strong>@_file.Name</strong> (@FormatFileSize(_file.Size))
                                        </div>
                                    }
                                </div>
                            </div>

                            <hr class="my-4"/>

                            <div class="row">
                                <div class="col-md-9 offset-md-3">
                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-primary" disabled="@_isCheckingOnnxModel">
                                            @if (_isSubmitting)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                                <span>Creating...</span>
                                            }
                                            else if (_isCheckingOnnxModel)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                                <span>Checking model...</span>
                                            }
                                            else
                                            {
                                                <i class="bi bi-check-circle me-2"></i>
                                                <span>Create Model</span>
                                            }
                                        </button>
                                        <button type="button" class="btn btn-outline-secondary" @onclick="@(() => JsRuntime.NavigateTo("/onnx"))" disabled="@_isSubmitting">
                                            <i class="bi bi-x-circle me-2"></i>Cancel
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status" style="height: 3rem; width: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="text-muted mt-3">Initializing form...</p>
        </div>
    }
</div>
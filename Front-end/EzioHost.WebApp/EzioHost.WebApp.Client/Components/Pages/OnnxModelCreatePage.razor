@page "/onnx-create"
@rendermode InteractiveServer


<PageTitle>Create ONNX Model</PageTitle>
<HeadContent>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tom-select/dist/css/tom-select.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</HeadContent>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="mb-6">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="flex items-center space-x-2 text-sm text-gray-600">
                <li>
                    <a href="/onnx" class="hover:text-primary-600 transition-colors flex items-center">
                        <i class="bi bi-cpu mr-1"></i>ONNX Models
                    </a>
                </li>
                <li class="text-gray-400">/</li>
                <li class="text-gray-900 font-medium" aria-current="page">Create New</li>
            </ol>
        </nav>
        <h2 class="text-3xl font-bold text-gray-900 flex items-center mb-2">
            <i class="bi bi-plus-circle mr-2 text-primary-600"></i>Create ONNX Model
        </h2>
        <p class="text-gray-600 mt-2">Configure and upload a new AI upscaling model</p>
    </div>

    @if (RendererInfo.IsInteractive)
    {
        <div class="flex justify-center">
            <div class="w-full max-w-4xl">
                <div class="bg-white border border-gray-200 rounded-xl shadow-sm">
                    <div class="p-6">
                        <EditForm Model="Onnx" Enhance="true" FormName="FrmCreateOnnx" OnValidSubmit="CreateNewOnnxModelSubmit">
                            <DataAnnotationsValidator/>

                            @if (_isSubmitting)
                            {
                                <div class="bg-blue-50 border border-blue-200 text-blue-800 rounded-lg p-4 mb-6 flex items-center" role="alert">
                                    <div class="inline-block animate-spin rounded-full h-5 w-5 border-b-2 border-blue-600 mr-3"></div>
                                    <div>Creating model, please wait...</div>
                                </div>
                            }

                            <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4 mb-6 hidden" role="alert">
                                <ValidationSummary/>
                            </div>

                            <div class="mb-6">
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="bi bi-tag mr-2"></i>Model Name <span class="text-red-500">*</span>
                                </label>
                                <div>
                                    <InputText @bind-Value="Onnx.Name" class="block w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500" placeholder="e.g., RealESRGAN x4"/>
                                    <small class="text-gray-500 text-xs mt-1 block">A descriptive name for your model</small>
                                </div>
                            </div>

                            <div class="mb-6">
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="bi bi-arrow-up-circle mr-2"></i>Scale Factor <span class="text-red-500">*</span>
                                </label>
                                <div>
                                    <InputNumber @bind-Value="Onnx.Scale" class="block w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500" min="1" max="8"/>
                                    <small class="text-gray-500 text-xs mt-1 block">Output resolution multiplier (1x - 8x)</small>
                                </div>
                            </div>

                            <div class="mb-6">
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="bi bi-aspect-ratio mr-2"></i>Input Dimensions
                                </label>
                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-xs text-gray-500 mb-1">Width (px)</label>
                                        <InputNumber @bind-Value="Onnx.MustInputWidth" class="block w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500" placeholder="e.g., 1920"/>
                                    </div>
                                    <div>
                                        <label class="block text-xs text-gray-500 mb-1">Height (px)</label>
                                        <InputNumber @bind-Value="Onnx.MustInputHeight" class="block w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500" placeholder="e.g., 1080"/>
                                    </div>
                                </div>
                                <small class="text-gray-500 text-xs mt-1 block">Required input dimensions for the model</small>
                            </div>

                            <div class="mb-6">
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="bi bi-speedometer2 mr-2"></i>Precision <span class="text-red-500">*</span>
                                </label>
                                <div>
                                    <InputSelect @bind-Value="Onnx.ElementType" class="block w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                                        @foreach (var value in Enum.GetValues<TensorElementType>())
                                        {
                                            <option value="@value">@value</option>
                                        }
                                    </InputSelect>
                                    <small class="text-gray-500 text-xs mt-1 block">Model precision affects performance and quality</small>
                                </div>
                            </div>

                            <div class="mb-6">
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    <i class="bi bi-file-earmark-binary mr-2"></i>Model File <span class="text-red-500">*</span>
                                </label>
                                <div>
                                    <InputFile class="block w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500" accept=".onnx" OnChange="OnFileChanged"/>
                                    <small class="text-gray-500 text-xs mt-1 block">Upload your .onnx model file</small>
                                    @if (_file != null)
                                    {
                                        <div class="bg-green-50 border border-green-200 text-green-800 rounded-lg p-3 mt-2 flex items-center" role="alert">
                                            <i class="bi bi-check-circle mr-2"></i>
                                            <strong>@_file.Name</strong> <span class="ml-2">(@FormatFileSize(_file.Size))</span>
                                        </div>
                                    }
                                </div>
                            </div>

                            <hr class="my-6 border-gray-200"/>

                            <div class="flex justify-end gap-3">
                                <button type="submit" class="px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium disabled:opacity-50 disabled:cursor-not-allowed flex items-center" disabled="@_isCheckingOnnxModel">
                                    @if (_isSubmitting)
                                    {
                                        <div class="inline-block animate-spin rounded-full h-4 w-4 border-b-2 border-white mr-2"></div>
                                        <span>Creating...</span>
                                    }
                                    else if (_isCheckingOnnxModel)
                                    {
                                        <div class="inline-block animate-spin rounded-full h-4 w-4 border-b-2 border-white mr-2"></div>
                                        <span>Checking model...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-check-circle mr-2"></i>
                                        <span>Create Model</span>
                                    }
                                </button>
                                <button type="button" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors font-medium disabled:opacity-50 disabled:cursor-not-allowed flex items-center" @onclick="@(() => JsRuntime.NavigateTo("/onnx"))" disabled="@_isSubmitting">
                                    <i class="bi bi-x-circle mr-2"></i>Cancel
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-12">
            <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600"></div>
            <p class="text-gray-600 mt-4">Initializing form...</p>
        </div>
    }
</div>
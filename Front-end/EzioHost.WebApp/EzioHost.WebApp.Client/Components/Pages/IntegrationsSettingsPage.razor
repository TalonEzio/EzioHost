@page "/settings/integrations"
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Cài đặt Tích hợp - EzioHost</PageTitle>

<div class="settings-container">
    <!-- Header -->
    <div class="settings-header">
        <div>
            <h1 class="settings-title">
                <i class="bi bi-plug"></i>
                Cài đặt Tích hợp
            </h1>
            <p class="settings-subtitle">Kết nối với các dịch vụ bên thứ ba và quản lý tích hợp</p>
        </div>
    </div>

    <!-- Placeholder Content -->
    <div class="placeholder-content">
        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-google"></i>
            </div>
            <h3 class="placeholder-title">Google Drive</h3>
            <p class="placeholder-description">Tích hợp với Google Drive để lưu trữ và đồng bộ</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-dropbox"></i>
            </div>
            <h3 class="placeholder-title">Dropbox</h3>
            <p class="placeholder-description">Kết nối với Dropbox để backup và chia sẻ</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-youtube"></i>
            </div>
            <h3 class="placeholder-title">YouTube</h3>
            <p class="placeholder-description">Tích hợp với YouTube để upload và quản lý video</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-github"></i>
            </div>
            <h3 class="placeholder-title">GitHub</h3>
            <p class="placeholder-description">Tích hợp với GitHub để quản lý code và version</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>
    </div>
</div>

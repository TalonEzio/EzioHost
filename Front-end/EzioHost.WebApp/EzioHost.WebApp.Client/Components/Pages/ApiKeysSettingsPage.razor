@page "/settings/api-keys"
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Cài đặt API Keys - EzioHost</PageTitle>

<div class="settings-container">
    <!-- Header -->
    <div class="settings-header">
        <div>
            <h1 class="settings-title">
                <i class="bi bi-key"></i>
                Cài đặt API Keys
            </h1>
            <p class="settings-subtitle">Quản lý API keys để tích hợp với các dịch vụ bên thứ ba</p>
        </div>
    </div>

    <!-- Placeholder Content -->
    <div class="placeholder-content">
        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-key-fill"></i>
            </div>
            <h3 class="placeholder-title">Tạo API Key</h3>
            <p class="placeholder-description">Tạo API key mới để sử dụng với các ứng dụng và dịch vụ</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-list-check"></i>
            </div>
            <h3 class="placeholder-title">Quản lý Keys</h3>
            <p class="placeholder-description">Xem danh sách và quản lý tất cả API keys của bạn</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-shield-lock"></i>
            </div>
            <h3 class="placeholder-title">Bảo mật API</h3>
            <p class="placeholder-description">Cấu hình giới hạn và quyền truy cập cho API keys</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>

        <div class="placeholder-card">
            <div class="placeholder-icon">
                <i class="bi bi-file-text"></i>
            </div>
            <h3 class="placeholder-title">Tài liệu API</h3>
            <p class="placeholder-description">Xem tài liệu và hướng dẫn sử dụng API</p>
            <div class="placeholder-badge">Sắp có</div>
        </div>
    </div>
</div>
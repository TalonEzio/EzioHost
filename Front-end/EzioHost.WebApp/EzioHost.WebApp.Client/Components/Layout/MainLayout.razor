@inherits LayoutComponentBase
<div class="flex flex-col min-h-screen bg-white">
    <!-- Navigation -->
    <nav class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <a href="/" class="flex items-center space-x-2 text-xl font-bold text-gray-900 hover:text-primary-600 transition-colors">
                    <i class="bi bi-play-circle-fill text-primary-600"></i>
                    <span>EzioHost</span>
                </a>

                <!-- Desktop Navigation -->
                <div class="hidden lg:flex items-center space-x-1">
                    <NavLink href="/" Match="NavLinkMatch.All" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-lg transition-colors">
                        <i class="bi bi-house-door mr-1"></i> Trang chủ
                    </NavLink>
                    <AuthorizeView>
                        <Authorized>
                            <NavLink href="/video" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-lg transition-colors">
                                <i class="bi bi-collection-play mr-1"></i> Video
                            </NavLink>
                            <NavLink href="/video-upload" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-lg transition-colors">
                                <i class="bi bi-cloud-upload mr-1"></i> Upload
                            </NavLink>
                            <NavLink href="/onnx" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-lg transition-colors">
                                <i class="bi bi-cpu mr-1"></i> AI Models
                            </NavLink>
                        </Authorized>
                    </AuthorizeView>
                    <NavLink href="/faq" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-lg transition-colors">
                        <i class="bi bi-question-circle mr-1"></i> FAQ
                    </NavLink>
                </div>

                <!-- Right Side Actions -->
                <div class="hidden lg:flex items-center space-x-4">
                    <AuthorizeView>
                        <Authorized>
                            <div class="relative">
                                <button type="button"
                                        id="account-dropdown-btn"
                                        class="flex items-center space-x-2 px-4 py-2 text-sm font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-lg transition-colors cursor-pointer"
                                        onclick="toggleAccountDropdown()">
                                    <i class="bi bi-person-circle"></i>
                                    <span>Tài khoản</span>
                                    <i class="bi bi-chevron-down text-xs transition-transform" id="account-chevron"></i>
                                </button>
                                <div id="account-dropdown" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-xl border border-gray-200 z-[100]">
                                    <div class="py-1">
                                        <a href="/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors" onclick="closeAccountDropdown()">
                                            <i class="bi bi-person mr-2"></i>Hồ sơ
                                        </a>
                                        <a href="/statistics" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors" onclick="closeAccountDropdown()">
                                            <i class="bi bi-graph-up-arrow mr-2"></i>Thống kê
                                        </a>
                                        <a href="/settings" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors" onclick="closeAccountDropdown()">
                                            <i class="bi bi-gear mr-2"></i>Cài đặt
                                        </a>
                                        <div class="border-t border-gray-200 my-1"></div>
                                        <a href="/logout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors" onclick="closeAccountDropdown()">
                                            <i class="bi bi-box-arrow-right mr-2"></i>Đăng xuất
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </Authorized>
                        <NotAuthorized>
                            <NavLink href="/login" class="px-4 py-2 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition-colors">
                                <i class="bi bi-box-arrow-in-right mr-1"></i> Đăng nhập
                            </NavLink>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>

                <!-- Mobile Menu Button -->
                <button class="lg:hidden p-2 text-gray-700 hover:text-primary-600" onclick="document.getElementById('mobile-menu').classList.toggle('hidden')">
                    <i class="bi bi-list text-2xl"></i>
                </button>
            </div>

            <!-- Mobile Menu -->
            <div id="mobile-menu" class="hidden lg:hidden border-t border-gray-200 py-4">
                <NavLink href="/" Match="NavLinkMatch.All" class="block px-4 py-2 text-sm font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-lg transition-colors">
                    <i class="bi bi-house-door mr-2"></i> Trang chủ
                </NavLink>
                <AuthorizeView>
                    <Authorized>
                        <NavLink href="/video" class="block px-4 py-2 text-sm font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-lg transition-colors">
                            <i class="bi bi-collection-play mr-2"></i> Video
                        </NavLink>
                        <NavLink href="/video-upload" class="block px-4 py-2 text-sm font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-lg transition-colors">
                            <i class="bi bi-cloud-upload mr-2"></i> Upload
                        </NavLink>
                        <NavLink href="/onnx" class="block px-4 py-2 text-sm font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-lg transition-colors">
                            <i class="bi bi-cpu mr-2"></i> AI Models
                        </NavLink>
                    </Authorized>
                </AuthorizeView>
                <NavLink href="/faq" class="block px-4 py-2 text-sm font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-lg transition-colors">
                    <i class="bi bi-question-circle mr-2"></i> FAQ
                </NavLink>
                <div class="border-t border-gray-200 my-2"></div>
                <AuthorizeView>
                    <Authorized>
                        <a href="/profile" class="block px-4 py-2 text-sm font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-lg transition-colors">
                            <i class="bi bi-person mr-2"></i>Hồ sơ
                        </a>
                        <a href="/statistics" class="block px-4 py-2 text-sm font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-lg transition-colors">
                            <i class="bi bi-graph-up-arrow mr-2"></i>Thống kê
                        </a>
                        <a href="/settings" class="block px-4 py-2 text-sm font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-lg transition-colors">
                            <i class="bi bi-gear mr-2"></i>Cài đặt
                        </a>
                        <a href="/logout" class="block px-4 py-2 text-sm font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-lg transition-colors">
                            <i class="bi bi-box-arrow-right mr-2"></i>Đăng xuất
                        </a>
                    </Authorized>
                    <NotAuthorized>
                        <NavLink href="/login" class="block px-4 py-2 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition-colors text-center">
                            <i class="bi bi-box-arrow-in-right mr-2"></i> Đăng nhập
                        </NavLink>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow">
        @(RendererInfo.Name switch
        {
            "Static" => Body,
            _ when RendererInfo.IsInteractive => Body,
            _ => _loadingContent
        })
    </main>

    <!-- Mobile Navigation -->
    <MobileNavigation />

    <!-- Footer -->
    <footer class="bg-gray-900 text-gray-300 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div>
                    <h5 class="text-white font-bold text-lg mb-4 flex items-center">
                        <i class="bi bi-play-circle-fill text-primary-400 mr-2"></i>
                        EzioHost
                    </h5>
                    <p class="text-gray-400">Nền tảng video hosting cá nhân với AI upscale mạnh mẽ.</p>
                </div>
                <div>
                    <h6 class="text-white font-semibold mb-4">Liên kết</h6>
                    <ul class="space-y-2">
                        <li>
                            <a href="/" class="text-gray-400 hover:text-white transition-colors">Trang chủ</a>
                        </li>
                        <li>
                            <a href="/video" class="text-gray-400 hover:text-white transition-colors">Video</a>
                        </li>
                        <li>
                            <a href="/faq" class="text-gray-400 hover:text-white transition-colors">FAQ</a>
                        </li>
                    </ul>
                </div>
                <div>
                    <h6 class="text-white font-semibold mb-4">Hỗ trợ</h6>
                    <ul class="space-y-2">
                        <li>
                            <a href="/contact" class="text-gray-400 hover:text-white transition-colors">Liên hệ</a>
                        </li>
                        <li>
                            <a href="/privacy" class="text-gray-400 hover:text-white transition-colors">Bảo mật</a>
                        </li>
                        <li>
                            <a href="/terms" class="text-gray-400 hover:text-white transition-colors">Điều khoản</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="border-t border-gray-800 mt-8 pt-8">
                <div class="flex flex-col md:flex-row justify-between items-center">
                    <p class="text-gray-400 text-sm">&copy; 2024 EzioHost. Tất cả quyền được bảo lưu.</p>
                    <p class="text-gray-400 text-sm mt-2 md:mt-0">Được phát triển với <i class="bi bi-heart-fill text-red-500"></i> và .NET</p>
                </div>
            </div>
        </div>
    </footer>
</div>

<!-- Error UI -->
<div id="blazor-error-ui" class="fixed bottom-4 left-1/2 transform -translate-x-1/2 bg-red-600 text-white px-6 py-4 rounded-lg shadow-lg z-50 flex items-center space-x-3" data-nosnippet style="display: none;">
    <i class="bi bi-exclamation-triangle-fill"></i>
    <span>Đã xảy ra lỗi không xử lý được.</span>
    <a href="." class="px-3 py-1 bg-red-700 hover:bg-red-800 rounded text-sm transition-colors">Tải lại</a>
    <button type="button" class="ml-2 text-white hover:text-gray-200" onclick="this.parentElement.style.display = 'none'">
        <i class="bi bi-x-lg"></i>
    </button>
</div>

@code
{
    private readonly RenderFragment _loadingContent =
        @<div class="text-center py-12">
        <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600"></div>
        <p class="text-gray-500 mt-4">Loading content...</p>
    </div>;
}

{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AppSettings": {
    "OpenIdConnect": {
      "Authority": "https://keycloak.talonezio.click/realms/EzioHost",
      "ClientId": "Ezio-Host-Client",
      "ClientSecret": "9tzZLjXffwqI8lBX8QxAcJxr7iI1HNTJ",
      "WebApiScope": "EzioHost.WebApi",
      "AdminUserName": "vuthemanh1707@gmail.com",
      "AdminPassword": "vuthemanh1707",
      "NameClaimType": "name",
      "RoleClaimType": "roles",
      "UserNameClaimType": "preferred_username"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "apiRoute": {
        "ClusterId": "apiCluster",
        "Match": { "Path": "/api/{**catch-all}" }
      },
      "staticRoute": {
        "ClusterId": "apiCluster",
        "Match": { "Path": "/static/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/static" }
        ]
      },
      "hubsRoute": {
        "ClusterId": "apiCluster",
        "Match": { "Path": "/hubs/{**catch-all}" }
      }
    },
    "Clusters": {
      "apiCluster": {
        "Destinations": {
          "api": {
            "Address": "https://localhost:7289"
          }
        }
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Async" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System.Net.Http.HttpClient": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/app-.log",
                "rollingInterval": "Day",
                "fileSizeLimitBytes": 10485760,
                "rollOnFileSizeLimit": true,
                "retainedFileCountLimit": 14,
                "shared": true,
                "flushToDiskInterval": 2,
                "restrictedToMinimumLevel": "Information",
                "outputTemplate": "{Timestamp:O} [{Level:u3}] {SourceContext} {Message:lj} {Properties:j}{NewLine}{Exception}"
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "logs/app-json-.log",
                "rollingInterval": "Day",
                "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                "fileSizeLimitBytes": 10485760,
                "rollOnFileSizeLimit": true,
                "retainedFileCountLimit": 7
              }
            }
          ]
        }
      }
    ]
  }
}

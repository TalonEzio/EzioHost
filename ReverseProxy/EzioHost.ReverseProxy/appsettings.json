{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp.ReverseProxy": "Debug",
      "Microsoft.AspNetCore.Rewrite": "Debug"
    }
  },
  "AppSettings": {
    "OpenIdConnect": {
      "Authority": "http://localhost:18080/realms/EzioHost",
      "ClientId": "Ezio-Host-Client",
      "ClientSecret": "nQXBEioCYekH0WtmAeDD4zT7gZrcu8FD",
      "WebApiScope": "EzioHost.WebApi",
      "AdminUserName": "vuthemanh1707@gmail.com",
      "AdminPassword": "vuthemanh1707",
      "NameClaimType": "name",
      "RoleClaimType": "roles",
      "UserNameClaimType": "preferred_username"
    },
    "GarnetCache": {
      "Host": "localhost",
      "Port": 18119,
      "UserName": "default",
      "Password": "DRKWUZnRq5VxpnDvSBjTd4",
      "Database": 0,
      "KeyPrefix": "EzioHost_session:",
      "DefaultExpiryDays": 7
    }
  },
  "ReverseProxy": {
    "Routes": {
      "apiRoute": {
        "ClusterId": "apiCluster",
        "Match": { "Path": "/api/{**catch-all}" },
        "Order": 1
      },
      "staticRoute": {
        "ClusterId": "apiCluster",
        "Match": { "Path": "/static/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/static" }
        ],
        "Order": 2
      },
      "hubsRoute": {
        "ClusterId": "apiCluster",
        "Match": { "Path": "/hubs/{**catch-all}" },
        "Order": 3
      },
      "frontendRoute": {
        "ClusterId": "frontendCluster",
        "Match": {
          "Path": "/{**catch-all}"
        },
        "Order": 4
      }
    },
    "Clusters": {
      "apiCluster": {
        "Destinations": {
          "api": {
            "Address": "https://localhost:18089"
          }
        }
      },
      "frontendCluster": {
        "Destinations": {
          "frontend": {
            "Address": "https://localhost:18099"
          }
        }
      }
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Async"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System.Net.Http.HttpClient": "Warning"
      }
    },
    "Enrich": ["FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId"],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/app-.log",
                "rollingInterval": "Day",
                "fileSizeLimitBytes": 10485760,
                "rollOnFileSizeLimit": true,
                "retainedFileCountLimit": 14,
                "shared": true,
                "flushToDiskInterval": 2,
                "restrictedToMinimumLevel": "Information",
                "outputTemplate":
                  "{Timestamp:O} [{Level:u3}] {SourceContext} {Message:lj} {Properties:j}{NewLine}{Exception}"
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "logs/app-json-.log",
                "rollingInterval": "Day",
                "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                "fileSizeLimitBytes": 10485760,
                "rollOnFileSizeLimit": true,
                "retainedFileCountLimit": 7
              }
            }
          ]
        }
      }
    ]
  }
}